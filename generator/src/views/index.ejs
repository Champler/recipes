            <h2>TODAS LAS RECETAS</h2>
        </div>
        <hr width="20px">
        
        <section class="recipe-cards">
            <% recipes.forEach(recipe => { %>
                <article class="recipe">
                     <img src="/img/<%- recipe.images[0].name  %> " alt="">
                  
                    
                    <h4><%- recipe.name %></h4>
                    <% if (session.user && session.user.id == recipes.user_id){ %>
                        <a href="/editRecipe/<%- recipe.id %>">EDITAR</a>
                        <a href="/delete/<%- recipe.id %>">Agregar</a>
                    <% } %>
                </article>
            <% }) %>
        </section>
    </main>
    
</body>
</html>