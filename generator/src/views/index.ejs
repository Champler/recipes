<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
    <body>
        <%- include('./partials/header') %> 
    <main class="index">
        
            <div class="agregarP">
                <h2>Â¿Deseas agregar una receta?</h2>
                <% if (session.user) { %>
                    <a href="/addRecipe">click Aqui</a>
                <% }else{ %>
                <a href="/users/login">click Aqui</a>
                <% } %>
            </div>
        
       
        <!-- CAROUSEL -->
        <div class="carousel">
            <lottie-player src="https://assets1.lottiefiles.com/temp/lf20_nXwOJj.json"  background="transparent"  speed="1"  style="width: 500px; height: 300px;"  loop  autoplay></lottie-player>
        </div>
        <div class="otrasRecetas">
            <h2>TODAS LAS RECETAS</h2>
        </div>
        <hr width="20px">
        
        <section class="recipe-cards">
            <% recipes.forEach(recipe => { %>
                <article class="recipe">
                     <img src="/img/<%- recipe.images[0].name  %> " alt="">
                  
                    
                    <h4><%- recipe.name %></h4>
                   <div class="controls">
                        <a href="/editRecipe/<%- recipe.id %>"><img src="/img/edit.png" width="30px" alt=""></a>
                        <a href="/delete/<%- recipe.id %>"><img src="/img/delete.png" width="30px"alt=""></a>
                    </div>
                </article>
            <% }) %>
        </section>
    </main>
    
</body>
</html>